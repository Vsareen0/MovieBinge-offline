<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
<hibernate-mapping> 
<class name="com.comaniacs.models.MovieDetails" table="MOVIEDETAILS">
	<id name="movieId" type="int">
     	<column name="MOVIE_ID" length="4" />
     	<generator class="assigned"/>
     </id>
     <property name="genres" type="string">
     	<column name="GENRES" length="150"></column>
     </property>
     <property name="homepage" type="string">
     	<column name="HOMEPAGE" length="150"></column>
     </property>
     <property name="tagline" type="string">
     	<column name="TAGLINE" length="150"></column>
     </property>
     <property name="runtime" type="string">
     	<column name="RUNTIME" length="50"></column>
     </property>
     
</class> 
</hibernate-mapping>